<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.intervigil.lame" android:versionCode="4"
	android:versionName="0.04" android:installLocation="auto">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<uses-sdk android:minSdkVersion="7" />

	<application android:icon="@drawable/lame4android_icon" android:label="@string/app_name"
		android:name="com.intervigil.lame.LameApplication">
		<activity android:name=".Main" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="@string/set_preferences"
			android:name=".Preferences" />

		<!-- AdMobActivity definition -->
		<activity android:name="com.google.ads.AdMobActivity"
			android:configChanges="orientation|keyboard|keyboardHidden" />

		<meta-data android:value="a14cc4c75fa8625" android:name="ADMOB_PUBLISHER_ID" />

	</application>
</manifest>
